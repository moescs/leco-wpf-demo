<Window
    x:Class="WpfFirmwareDemo.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WpfFirmwareDemo"
    xmlns:view="clr-namespace:WpfFirmwareDemo.View"
    mc:Ignorable="d"
    Title="Firmware WPF Demo"
    Height="350"
    Width="525">
    <TabControl>
        <TabItem
            Header="User Control">
            <view:OverView
                x:Name="UserControl"/>
        </TabItem>
        <TabItem
            Header="Custom Controls">
            <view:CustomControlsView />
        </TabItem>
        <TabItem
            Header="Brushes">
            <view:BrushesView />
        </TabItem>
        <TabItem
            Header="Items Control">
            <view:ItemsView
                x:Name="ItemsView"/>
        </TabItem>
    </TabControl>
</Window>
